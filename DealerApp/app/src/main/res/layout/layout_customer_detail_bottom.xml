<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_detail_bottom_tabs_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/new_customer_bottom_margin"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/customer_detail_bottom_info_rl"
        android:layout_width="match_parent"
        android:layout_height="38.6dp"
        android:layout_marginTop="10.4dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv"
            android:text="客户基本信息"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customer_detail_bottom_requirments_rl"
        android:layout_width="match_parent"
        android:layout_height="38.6dp"
        android:layout_marginTop="10.4dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv_1"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv_1"
            android:text="产品需求"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customer_detail_bottom_followup_reason_rl"
        android:layout_width="match_parent"
        android:layout_height="38.6dp"
        android:layout_marginTop="10.4dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv_2"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv_2"
            android:text="继续跟进理由"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customer_detail_bottom_remark_rl"
        android:layout_width="match_parent"
        android:layout_height="38.6dp"
        android:layout_marginTop="10.4dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv_3"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:id="@+id/customer_detail_bottom_remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv_3"
            android:text="备注"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/customer_detail_remark_dot_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/customer_detail_bottom_remark_text"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/customer_detail_bottom_remark_text"
            android:src="@mipmap/customer_detail_red_dot"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/new_yellow_card_info_collapse_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>