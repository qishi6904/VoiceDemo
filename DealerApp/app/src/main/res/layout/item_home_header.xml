<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@mipmap/ic_home_traffic"
            android:layout_centerInParent="true"/>
        
        <TextView
            android:id="@+id/tv_delay_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="8"
            android:background="@drawable/shape_home_delay_num_bg"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:visibility="gone"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_header_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/resource_assist_text"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/tv_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="客流"
                android:textColor="@color/resource_assist_text"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yellow_item_divider_bg"
            android:layout_marginTop="14dp"/>

    </LinearLayout>

</LinearLayout>