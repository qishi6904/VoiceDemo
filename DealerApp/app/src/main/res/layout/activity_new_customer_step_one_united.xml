<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--用来抢占焦点，以免进入时键盘自动弹出-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/activity_new_customer_step_1_titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">

            <View
                android:background="@color/new_yellow_card_blue"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="33%" />

        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_new_customer_step_1_bottom_layout"
        android:layout_below="@id/activity_new_customer_step_1_titlebar_layout">

        <LinearLayout
            android:id="@+id/new_customer_step_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<FrameLayout-->
            <!--android:id="@+id/new_customer_step_1_basic_info_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--</FrameLayout>-->

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/new_customer_step_1_basic_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <!--<LinearLayout-->
            <!--android:id="@+id/new_customer_step_1_requirements_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical" />-->

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/new_customer_step_1_requirements_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <!--<FrameLayout-->
            <!--android:id="@+id/new_customer_step_1_opp_level_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/new_customer_step_1_opp_level_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <!--<FrameLayout-->
            <!--android:id="@+id/new_customer_step_1_others_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/new_customer_step_1_others_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/NewCustomerGapView"
                android:layout_height="@dimen/new_customer_bottom_margin" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_new_customer_step_1_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#33434C"
            android:text="@string/new_customer_quick_create"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/activity_new_yellow_card_step_one_next_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/new_customer_next_button_selector"
            android:enabled="false"
            android:text="@string/new_customer_next"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>