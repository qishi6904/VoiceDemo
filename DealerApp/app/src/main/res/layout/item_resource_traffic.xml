<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/item_bg">

    <View
        android:id="@+id/v_divider_up"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <com.svw.dealerapp.ui.widget.DragLayout
        android:id="@+id/drag_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/traffic_item_height">

        <com.svw.dealerapp.ui.widget.DragFrontRelativeLayout
            android:id="@+id/rl_front_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/traffic_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="28dp">

                <LinearLayout
                    android:id="@+id/ll_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="-1.5dp"
                        android:scaleType="fitStart"
                        android:src="@mipmap/ic_human" />

                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:textColor="@color/resource_main_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_right_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/ic_traffic_status_created_card" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_desc_container"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_below="@+id/ll_up"
                    android:layout_marginLeft="28dp"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:text="2017.05.05 09:19"
                    android:textColor="@color/resource_assist_text"
                    android:textSize="10sp" />

            </RelativeLayout>

        </com.svw.dealerapp.ui.widget.DragFrontRelativeLayout>

        <LinearLayout
            android:id="@+id/ll_back_view"
            android:layout_width="@dimen/traffic_item_three_item_back_layout_width"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_back_view_one"
                android:layout_width="@dimen/traffic_item_back_view_three_item_width"
                android:layout_height="match_parent"
                android:background="@color/traffic_item_back_view_one_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_back_view_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_traffic_create_card" />

                <TextView
                    android:id="@+id/tv_back_view_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/traffic_back_view_create_card"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_back_view_two"
                android:layout_width="@dimen/traffic_item_back_view_three_item_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/traffic_item_back_view_divider_width"
                android:background="@color/traffic_item_back_view_two_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_back_view_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_traffic_follow_up" />

                <TextView
                    android:id="@+id/tv_back_view_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/traffic_back_view_follow"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_back_view_three"
                android:layout_width="@dimen/traffic_item_back_view_three_item_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/traffic_item_back_view_divider_width"
                android:background="@color/traffic_item_back_view_three_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_back_view_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_traffic_can_not_create_card" />

                <TextView
                    android:id="@+id/tv_back_view_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/traffic_back_view_can_not_create_card"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </com.svw.dealerapp.ui.widget.DragLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_divider_shadow_up" />

</LinearLayout>