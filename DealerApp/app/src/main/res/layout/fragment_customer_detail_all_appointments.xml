<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38.6dp">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv"
            android:text="@string/customer_detail_appointments_header"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/new_yellow_card_info_collapse_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/NewCustomerDividingLineFull" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_customer_detail_all_appointments_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/fragment_customer_detail_all_appointments_empty_rl"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/customer_detail_item_bg">

        <TextView
            android:id="@+id/item_customer_detail_appointment_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/fragment_customer_detail_appointment_cry"
            android:drawablePadding="6dp"
            android:text="@string/customer_detail_appointments_empty"
            android:textColor="@color/new_yellow_card_input_text"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/new_yellow_card_blue" />
    </RelativeLayout>
</LinearLayout>