<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--用来抢占焦点，以免进入时键盘自动弹出-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <include
        android:id="@+id/activity_order_titlebar_layout"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_order_bottom_layout"
        android:layout_below="@id/activity_order_titlebar_layout"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/new_customer_bottom_margin">

            <View
                android:id="@+id/activity_order_first_gap_view"
                style="@style/NewCustomerGapView" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/order_opp_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/order_buyer_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/order_order_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/order_replacement_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/NewCustomerGapView" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/order_recommended_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_order_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_save_or_otd_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/new_customer_next_button_selector"
            android:text="@string/order_report_otd"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/order_submit_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/order_dark_dark_blue_selector"
            android:enabled="false"
            android:text="@string/order_submit_order"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>