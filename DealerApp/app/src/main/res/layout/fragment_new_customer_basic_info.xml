<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <com.svw.dealerapp.ui.widget.CustomItemViewForEditText
        android:id="@+id/new_customer_basic_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForRadioButton
        android:id="@+id/new_customer_basic_info_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<com.svw.dealerapp.ui.widget.CustomItemViewForEditText-->
    <!--android:id="@+id/new_customer_basic_info_mobile"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.svw.dealerapp.ui.widget.CustomItemViewForEditText
            android:id="@+id/new_customer_basic_info_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/rl_check_repeat"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_create_tranffic_check_repeat_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/home_create_traffic_check_repeat"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/new_yellow_card_divide_line" />

        </RelativeLayout>

    </LinearLayout>


    <com.svw.dealerapp.ui.widget.CustomItemViewForButton
        android:id="@+id/new_customer_basic_info_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/new_customer_basic_info_car_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForOptionsPicker
        android:id="@+id/new_customer_basic_info_buyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForOptionsPicker
        android:id="@+id/new_customer_basic_info_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForOptionsPicker
        android:id="@+id/new_customer_basic_info_evaluator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForOptionsPicker
        android:id="@+id/new_customer_basic_info_opp_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.svw.dealerapp.ui.widget.CustomItemViewForEditTextWithMic
        android:id="@+id/new_customer_basic_info_followup_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>