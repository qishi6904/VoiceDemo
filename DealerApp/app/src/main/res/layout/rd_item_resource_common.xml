<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/traffic_item_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/rd_ic_resource_vip"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/resource_text_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:text="10:30"
            android:textColor="@color/resource_text_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/yellow_card_create_action"
            android:textColor="@color/resource_text_blue"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="23dp"
        android:background="@color/yellow_item_divider_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="60dp"
                android:singleLine="true"
                android:text="王先生"
                android:textColor="@color/resource_main_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_customer_rank"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_yellow_card_customer_rank_h" />

            <TextView
                android:id="@+id/tv_customer_src"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rd_shape_resource_follow_up_src_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="到店"
                android:textColor="@color/resource_blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_customer_approve"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rd_shape_resource_follow_up_approve_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/yellow_card_wait_approve"
                android:textColor="@color/yellow_item_approve"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_order_otd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="OTD"
                android:textColor="@color/resource_text_green"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_fail_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="同品"
                android:textColor="@color/resource_text_green"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="36dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@mipmap/rd_ic_send_msg" />

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="36dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:src="@mipmap/rd_ic_call_phone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textColor="@color/resource_main_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13888888888"
                android:textColor="@color/resource_main_text"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_consultant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_phone"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_card_consultant"
                    android:textColor="@color/resource_text_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_consultant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王黎明"
                    android:textColor="@color/resource_text_blue"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车系："
                    android:textColor="@color/resource_main_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="70dp"
                    android:singleLine="true"
                    android:text="途观L"
                    android:textColor="@color/resource_main_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_is_drive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/yellow_card_has_drive"
                    android:textColor="@color/resource_main_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_phone"
                android:gravity="right"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_card_next_follow_up"
                    android:textColor="@color/resource_text_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="12.12"
                    android:textColor="@color/resource_text_blue"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>