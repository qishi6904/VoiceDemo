            android:layout_column="1"
            android:text="@string/new_customer_opp_level_header" />

        <TextView
            android:id="@+id/new_yellow_card_level_level_tv"
            style="@style/NewCardRightTextStyle.TextView"
            android:layout_column="2"
            android:hint="@string/new_customer_opp_level_hint" />

        <View
            android:layout_width="@dimen/custom_item_layout_right_padding"
            android:layout_height="48dp"
            android:layout_column="3" />
    </TableRow>

    <View
        android:id="@+id/new_yellow_card_level_level_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="@color/new_yellow_card_divide_line" />

    <TableRow
        android:id="@+id/new_customer_step_1_level_key_customer_tr"
        android:gravity="center_vertical">

        <TextView
            android:layout_column="0"
            android:layout_marginLeft="@dimen/custom_item_star_left_margin"
            android:layout_marginRight="@dimen/custom_item_star_right_margin"
            android:text="@string/new_customer_mandatory"
            android:textColor="#EA4F44"
            android:visibility="invisible" />

        <TextView
            android:layout_column="1"
            android:text="@string/new_customer_opp_level_key_customer" />

        <CheckBox
            android:id="@+id/new_customer_step_1_level_key_customer_cb"
            style="@style/NewCardRightTextStyle"
            android:layout_column="2"
            android:background="@drawable/common_switch_selector"
            android:button="@null" />

        <View android:layout_height="48dp" />
    </TableRow>

    <View
        android:id="@+id/new_customer_step_1_level_key_customer_tr_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="@color/new_yellow_card_divide_line" />

    <TableRow
        android:id="@+id/new_customer_step_1_level_reason_title_tr"
