<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_yellow_card_level_table_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:stretchColumns="1,2">

    <TableRow
        android:id="@+id/new_yellow_card_level_level_tr"
        android:gravity="center_vertical">

        <TextView
            android:layout_column="0"
            android:layout_marginLeft="@dimen/custom_item_star_left_margin"
            android:layout_marginRight="@dimen/custom_item_star_right_margin"
            android:text="@string/new_customer_mandatory"
            android:textColor="#EA4F44" />

        <TextView
