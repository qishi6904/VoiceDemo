<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForEditText
        android:id="@+id/new_order_buyer_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForEditText
        android:id="@+id/new_order_buyer_mobile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForEditText
        android:id="@+id/new_order_buyer_address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForEditText
        android:id="@+id/new_order_buyer_email_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForRecycleView
        android:id="@+id/new_order_buyer_id_type_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForEditText
        android:id="@+id/new_order_buyer_id_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForRadioButton
        android:id="@+id/new_order_buyer_gender_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForRecycleView
        android:id="@+id/new_order_buyer_category_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForOptionsPicker
        android:id="@+id/new_order_buyer_occupation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForOptionsPicker
        android:id="@+id/new_order_buyer_industry_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.svw.dealerapp.ui.widget.RdCustomItemViewForOptionsPicker
        android:id="@+id/new_order_buyer_company_property_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>