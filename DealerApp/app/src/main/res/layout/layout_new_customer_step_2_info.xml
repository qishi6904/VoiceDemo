<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/new_yellow_card_info_table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2">

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/custom_item_star_left_margin"
                    android:layout_marginRight="@dimen/custom_item_star_right_margin"
                    android:text="@string/new_customer_mandatory"
                    android:textColor="#EA4F44"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_column="1"
                    android:text="@string/new_customer_current_car_type" />

                <EditText
                    android:id="@+id/new_customer_step_2_info_current_car_type_et"
                    style="@style/NewCardRightTextStyle.EditText"
                    android:layout_height="@dimen/new_customer_row_height"
                    android:layout_column="2"
                    android:hint="@string/new_customer_current_car_type_hint" />

                <View
                    android:layout_width="@dimen/custom_item_layout_right_padding"
                    android:layout_height="48dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:background="@color/new_yellow_card_divide_line" />

            <TableRow
                android:id="@+id/new_customer_step_2_info_bought_year_tr"
                android:gravity="center_vertical">

                <TextView
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/custom_item_star_left_margin"
                    android:layout_marginRight="@dimen/custom_item_star_right_margin"
                    android:text="@string/new_customer_mandatory"
                    android:textColor="#EA4F44"
                    android:visibility="invisible" />

                <TextView
                    android:layout_column="1"
                    android:text="@string/new_customer_current_car_bought_year" />

                <TextView
                    android:id="@+id/new_customer_step_2_info_bought_year_tv"
                    style="@style/NewCardRightTextStyle.TextView"
                    android:layout_column="2"
                    android:hint="@string/new_customer_current_car_bought_year_hint" />

                <View android:layout_height="48dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:background="@color/new_yellow_card_divide_line" />

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:layout_column="0"
                    android:layout_marginLeft="@dimen/custom_item_star_left_margin"
                    android:layout_marginRight="@dimen/custom_item_star_right_margin"
                    android:text="@string/new_customer_mandatory"
                    android:textColor="#EA4F44"
                    android:visibility="invisible" />

                <TextView
                    android:layout_column="1"
                    android:text="@string/new_customer_current_car_mileage" />

                <TextView
                    android:id="@+id/new_yellow_card_step_2_mileage_tv"
                    style="@style/NewCardRightTextStyle.TextView"
                    android:layout_column="2"
                    android:drawableRight="@null" />

                <View android:layout_height="48dp" />
            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/new_customer_step_2_mileage_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cellMode="other"
                app:cells="150"
                app:hideProgressHint="true"
                app:lineColorEdge="#CFD7D9"
                app:lineColorSelected="@color/new_yellow_card_dark_blue"
                app:markTextArray="@array/mileageArray"
                app:max="150000"
                app:min="0"
                app:seekBarHeight="4dp"
                app:seekBarMode="single"
                app:seekBarResId="@mipmap/new_customer_dot"
                app:textPadding="8dp" />

            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/new_customer_step_2_mileage_gray_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cellMode="other"
                app:cells="150"
                app:hideProgressHint="true"
                app:lineColorEdge="#CFD7D9"
                app:lineColorSelected="@color/customer_detail_header_gray"
                app:markTextArray="@array/mileageArray"
                app:max="150000"
                app:min="0"
                app:seekBarHeight="4dp"
                app:seekBarMode="single"
                app:seekBarResId="@mipmap/new_customer_no_owner_dot"
                app:textPadding="8dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:background="@color/new_yellow_card_divide_line" />
    </LinearLayout>

    <com.svw.dealerapp.ui.widget.InterceptTouchCoverView
        android:id="@+id/itv_cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>