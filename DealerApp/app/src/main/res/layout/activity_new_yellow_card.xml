<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--用来抢占焦点，以免进入时键盘自动弹出-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"></LinearLayout>

    <LinearLayout
        android:id="@+id/activity_new_yellow_card_titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">

            <View
                android:background="@color/new_yellow_card_blue"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="25%" />

        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_new_yellow_card_bottom_layout"
        android:layout_below="@id/activity_new_yellow_card_titlebar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/new_customer_step_1_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <!--<include layout="@layout/layout_new_customer_basic_info" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="10.4dp" />

            <FrameLayout
                android:id="@+id/new_customer_step_1_requirements_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

            <!--<include layout="@layout/layout_new_customer_requirement_description" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="10.4dp" />

            <FrameLayout
                android:id="@+id/new_customer_step_1_opp_level_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>

            <!--<include layout="@layout/layout_new_customer_customer_level" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="10.4dp" />

            <FrameLayout
                android:id="@+id/new_customer_step_1_followup_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/new_customer_bottom_margin"></FrameLayout>
            <!--<include layout="@layout/layout_new_customer_step_1_follow_up_plan" />-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_new_yellow_card_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#33434C"
            android:text="@string/new_customer_quick_create"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/activity_new_yellow_card_step_one_next_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00B1EB"
            android:text="@string/new_customer_continue"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>