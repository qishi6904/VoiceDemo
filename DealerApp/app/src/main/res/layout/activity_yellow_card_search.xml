<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_bar_height"
        android:background="@color/title_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/activity_title_bar_height"
            android:layout_height="@dimen/activity_title_bar_height"
            android:src="@mipmap/ic_back"
            android:padding="15dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/resource_assist_text"
            android:textSize="18sp"
            android:text="@string/resource_yellow_search_title"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="9.5dp"
                        android:background="@drawable/shape_yellow_card_search_et_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="34dp"
                        android:paddingRight="30dp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:hint="@string/resource_yellow_search_hint"
                        android:textSize="16sp"/>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_search"
                        android:layout_marginLeft="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="0.6dp"/>

                    <ImageView
                        android:id="@+id/iv_clear"
                        android:layout_width="36dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_close"
                        android:scaleType="fitCenter"
                        android:paddingTop="7dp"
                        android:paddingBottom="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/resource_yellow_search_cancel"
                    android:textAlignment="center"
                    android:textColor="@color/resource_main_text"
                    android:textSize="14sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_search_result"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/resource_main_text"
                android:gravity="center"
                android:background="@color/page_bg"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/fl_yellow_card_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="8dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:background="@drawable/shape_nav_shadow_up" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_divider_height"
            android:layout_alignParentTop="true"
            android:background="@color/title_divider" />

    </RelativeLayout>
</LinearLayout>