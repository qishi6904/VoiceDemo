<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_layout_height"
        android:paddingRight="@dimen/custom_item_layout_right_padding">

        <TextView
            android:id="@+id/custom_item_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/custom_item_star_left_margin"
            android:layout_marginRight="@dimen/custom_item_star_right_margin"
            android:text="@string/new_customer_mandatory"
            android:textColor="@color/new_customer_mandatory"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/custom_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/custom_item_star_tv"
            android:text="标题"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/custom_item_content_view"
            style="@style/NewCardRightTextStyle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

        <RadioGroup
            android:id="@+id/custom_item_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/custom_item_radio_button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/new_customer_radio_button_selector"
                android:drawablePadding="10dp" />

            <RadioButton
                android:id="@+id/custom_item_radio_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:button="@null"
                android:drawableLeft="@drawable/new_customer_radio_button_selector"
                android:drawablePadding="10dp" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:id="@+id/custom_item_bottom_line"
        style="@style/NewCustomerDividingLineHalf" />

</LinearLayout>