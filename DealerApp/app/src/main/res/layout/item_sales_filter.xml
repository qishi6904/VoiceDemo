<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg">
    
    <ImageView
        android:id="@+id/iv_select_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="22dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_yellow_transfer_unselect_icon_bg"/>

    <TextView
        android:id="@+id/tv_sales_name"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_select_indicator"
        android:gravity="center_vertical"
        android:textColor="@color/resource_main_text"
        android:textSize="18sp"
        android:layout_marginBottom="1dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/list_item_divider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>