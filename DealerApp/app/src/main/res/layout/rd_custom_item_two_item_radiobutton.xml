<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_layout_height"
        android:paddingRight="@dimen/custom_item_layout_right_padding">

        <include
            layout="@layout/rd_custom_item_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/rd_custom_item_layout_left_margin" />

        <TextView
            android:id="@+id/custom_item_content_view"
            style="@style/NewCardRightTextStyle"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

        <RadioGroup
            android:id="@+id/custom_item_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/custom_item_radio_button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/new_customer_radio_button_selector"
                android:drawablePadding="5dp" />

            <RadioButton
                android:id="@+id/custom_item_radio_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:button="@null"
                android:drawableLeft="@drawable/new_customer_radio_button_selector"
                android:drawablePadding="5dp" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:id="@+id/custom_item_bottom_line"
        style="@style/RdNewCustomerDividingLineHalf" />

</LinearLayout>