<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <RelativeLayout
        android:id="@+id/rl_home_head_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/ll_home_head_badge"
            android:layout_width="88dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_head_item"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_main_palette" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_head_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_home_head_badge"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_change_theme"
            android:textColor="@color/text_common"
            android:textSize="@dimen/textSize_14" />

    </RelativeLayout>

</FrameLayout>
