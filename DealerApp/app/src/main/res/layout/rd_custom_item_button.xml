<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_layout_height"
        android:paddingRight="@dimen/custom_item_layout_right_padding">

        <include
            layout="@layout/rd_custom_item_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/rd_custom_item_layout_left_margin" />

        <Button
            android:id="@+id/custom_item_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/new_customer_checkbox_checked"
            android:text="@string/order_create_order_member_owner_verify_btn"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/custom_item_optional_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/custom_item_button"
            android:lines="1"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/custom_item_bottom_line"
        style="@style/NewCustomerDividingLineHalf" />

</LinearLayout>