<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38.6dp">

        <ImageView
            android:id="@+id/new_yellow_card_info_iv"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-14dp"
            android:src="@drawable/new_yellow_card_left_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/new_yellow_card_info_iv"
            android:text="@string/new_customer_step_1_followup_plan_header"
            android:textColor="@color/new_yellow_card_blue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/new_yellow_card_plan_collapse_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/new_yellow_card_collapse" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/new_yellow_card_plan_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:background="@color/new_yellow_card_divide_line" />

        <TableRow
            android:id="@+id/new_yellow_card_plan_date_tr"
            android:gravity="center_vertical">

            <TextView
                android:layout_column="0"
                android:layout_marginLeft="28dp"
                android:text="@string/new_customer_mandatory"
                android:textColor="#EA4F44" />

            <TextView
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:text="@string/new_customer_step_1_followup_plan_date" />

            <TextView
                android:id="@+id/new_yellow_card_plan_date_tv"
                style="@style/NewCardRightTextStyle.TextView"
                android:layout_column="2"
                android:hint="@string/new_customer_step_1_followup_plan_date_hint" />

            <View
                android:layout_width="30dp"
                android:layout_height="48dp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:background="@color/new_yellow_card_divide_line" />

    </TableLayout>

</LinearLayout>