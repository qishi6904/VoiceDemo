<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_custom_dialog_bg"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_title_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_title_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_warn" />

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:paddingTop="0.5dp"
                android:singleLine="true"
                android:text="提示"
                android:textColor="@color/resource_main_text"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:padding="18dp"
            android:src="@mipmap/ic_dialog_close" />

    </RelativeLayout>

    <View
        android:id="@+id/v_title_under_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/custom_dialog_divider"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RelativeLayout
                android:id="@+id/rl_update_dialog_pb_outer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_update_dialog_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/update_dialog_file_size_hint"
                    android:textColor="@color/resource_main_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_update_dialog_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/update_dialog_download_per_hint"
                    android:textColor="@color/resource_main_text"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/pb_update_dialog"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_update_dialog_progress"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:progressDrawable="@drawable/update_progress_bar_dialog_style"
                    android:thumb="@null" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_update_dialog_tip"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:text="@string/update_find_new_version"
            android:textColor="@color/resource_main_text"
            android:textSize="16sp"
            android:visibility="visible" />

        <View
            android:id="@+id/v_content_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/custom_dialog_divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_dialog_bottom_btn_height"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/dialog_cancel"
            android:textColor="@color/resource_assist_text"
            android:textSize="14sp" />

        <View
            android:id="@+id/v_btn_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/custom_dialog_divider" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_dialog_bottom_btn_height"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/update_dialog_confirm_btn_text"
            android:textColor="@color/resource_main_text"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>


