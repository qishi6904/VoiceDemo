<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/custom_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/custom_item_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/custom_item_star_left_margin"
            android:layout_marginRight="@dimen/custom_item_star_right_margin"
            android:text="@string/new_customer_mandatory"
            android:textColor="@color/new_customer_mandatory"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/custom_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/custom_item_star_tv"
            android:text="标题"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/custom_item_content_view"
            style="@style/NewCardRightTextStyle.EditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/custom_item_layout_right_padding"
            android:paddingBottom="17dp"
            android:paddingTop="17dp" />

        <EditText
            android:id="@+id/custom_item_content_view_big"
            style="@style/NewCardRightTextStyle.EditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/custom_item_layout_right_padding"
            android:lines="2"
            android:minHeight="30dp"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:singleLine="false"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/custom_item_bottom_line"
        style="@style/NewCustomerDividingLineHalf" />

</LinearLayout>