<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_bar_height"
        android:background="@color/title_blue">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/activity_title_bar_height"
            android:layout_height="@dimen/activity_title_bar_height"
            android:layout_alignParentLeft="true"
            android:padding="14dp"
            android:src="@mipmap/rd_ic_main_menu" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_index_page"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="@dimen/activity_title_bar_height"
            android:layout_height="@dimen/activity_title_bar_height"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/rd_ic_home_create_lead" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/activity_title_bar_height"
            android:layout_height="@dimen/activity_title_bar_height"
            android:layout_toLeftOf="@+id/iv_filter"
            android:padding="14dp"
            android:src="@mipmap/rd_ic_home_search" />

    </RelativeLayout>

    <com.svw.dealerapp.ui.widget.NoScrollViewPager
        android:id="@+id/nvp_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.svw.dealerapp.ui.widget.NavBar
            android:id="@+id/nb_main_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_title_bar_height"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow_item_divider_bg" />

    </RelativeLayout>

</LinearLayout>