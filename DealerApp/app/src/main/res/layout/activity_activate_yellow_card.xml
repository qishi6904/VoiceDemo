<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--用来抢占焦点，以免进入时键盘自动弹出-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/ll_activate_yellow_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_activate_yellow_card_submit"
        android:layout_below="@id/ll_activate_yellow_card_title"
        android:layout_marginTop="10dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/new_customer_bottom_margin">

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/activity_add_followup_record_add_record_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.4dp" />

            <com.svw.dealerapp.ui.widget.CustomSectionViewGroup
                android:id="@+id/activity_add_followup_record_next_plan_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.4dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_activate_yellow_card_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_activate_yellow_card_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/new_customer_next_button_selector"
            android:enabled="false"
            android:text="@string/public_submit"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>