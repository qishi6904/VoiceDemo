<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/rd_ui_home_to_be_approved_rl"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rd_home_header_to_be_approved_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/rd_ui_home_to_be_approved_tv"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="28"
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="@string/rd_home_header_to_be_approved"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.svw.dealerapp.ui.widget.RdHomeHeaderLayout
                android:id="@+id/rd_ui_home_header_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" />

            <com.svw.dealerapp.ui.widget.RdHomeHeaderLayout
                android:id="@+id/rd_ui_home_header_ecommerce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <com.svw.dealerapp.ui.widget.RdHomeHeaderLayout
                android:id="@+id/rd_ui_home_header_followup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <com.svw.dealerapp.ui.widget.RoundCornerLinearLayout
            android:id="@+id/rd_ui_home_auto_play_container"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="10dp"
            android:background="@color/item_bg">

            <com.svw.dealerapp.ui.widget.AutoPlayLayout
                android:id="@+id/rd_ui_home_auto_play_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/ll_auto_play_error_outer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_home_auto_play_empty" />

                <TextView
                    android:id="@+id/tv_auto_play_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_data"
                    android:textColor="@color/resource_main_text"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.svw.dealerapp.ui.widget.RoundCornerLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="今日事项"
            android:textColor="#A4A4A4" />

        <LinearLayout
            android:id="@+id/ll_error_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <!--<RelativeLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<View-->
            <!--android:layout_width="110dp"-->
            <!--android:layout_height="110dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="@drawable/shape_home_no_data_bg" />-->

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/request_error" />

            <!--</RelativeLayout>-->

            <TextView
                android:id="@+id/tv_error_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/empty_data_home"
                android:textColor="@color/resource_assist_text"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rd_ui_home_header_due_records_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:alpha="0.85"
        android:background="@drawable/rd_home_header_due_record_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/rd_ui_home_header_due_records_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:text="您有1条逾期记录"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/rd_ui_home_header_due_records_dismiss_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.3dp"
            android:src="@mipmap/rd_home_due_record_dismiss" />
    </RelativeLayout>

</FrameLayout>