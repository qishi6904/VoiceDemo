<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_outer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/item_bg">

        <TextView
            android:id="@+id/tv_kpi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kpi_today_plan"
            android:textColor="@color/mine_blue"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/ic_arrow_down" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_nav"
                android:layout_width="match_parent"
                android:layout_height="68dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:background="@color/item_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kpi_today"
                            android:textColor="@color/resource_main_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/resource_main_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/resource_main_text"
                            android:textSize="38sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kpi_customer"
                            android:textColor="@color/resource_assist_text"
                            android:textSize="12sp"
                            android:paddingLeft="2dp"/>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:id="@+id/v_type_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/yellow_item_divider_bg"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:id="@+id/ll_check_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_type_indicator"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_kpi_type_car" />

                    <TextView
                        android:id="@+id/tv_type_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/kpi_check_type_car"
                        android:textColor="@color/mine_blue"
                        android:textSize="9sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/yellow_item_divider_bg" />

                <LinearLayout
                    android:id="@+id/ll_check_valid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_valid_indicator"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_kpi_type_valid" />

                    <TextView
                        android:id="@+id/tv_valid_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/kpi_check_type_valid"
                        android:textColor="@color/mine_blue"
                        android:textSize="9sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/yellow_item_divider_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.svw.dealerapp.ui.widget.NoPreLoadNoScrollViewPager
                    android:id="@+id/vp_kpi_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.svw.dealerapp.ui.widget.NoPreLoadNoScrollViewPager
                    android:id="@+id/vp_kpi_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="8dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:background="@drawable/shape_nav_shadow_up" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_divider_height"
            android:layout_alignParentTop="true"
            android:background="@color/title_divider" />

    </RelativeLayout>

</LinearLayout>
