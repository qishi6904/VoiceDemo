<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_up_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_height"
        android:visibility="gone"/>

    <!--<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/home_card_view_item_height"-->
        <!--android:layout_marginBottom="@dimen/home_card_view_item_margin_bottom"-->
        <!--android:layout_marginLeft="@dimen/home_card_view_item_margin_left"-->
        <!--android:layout_marginRight="@dimen/home_card_view_item_margin_right"-->
        <!--android:layout_marginTop="@dimen/home_card_view_item_margin_top"-->
        <!--android:background="@color/item_bg"-->
        <!--app:cardCornerRadius="0dp"-->
        <!--app:cardElevation="4dp">-->

        <com.svw.dealerapp.ui.widget.RoundCornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_card_view_item_height"
            android:layout_marginRight="@dimen/home_card_view_item_margin_right"
            android:layout_marginLeft="@dimen/home_card_view_item_margin_right"
            android:background="@color/item_bg">


            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="76dp"
                android:layout_height="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_request_sleep" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_status"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sales_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/resource_assist_text"
                    android:textSize="10sp"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/resource_assist_text"
                    android:textSize="10sp"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <View
                android:id="@+id/v_divider"
                android:layout_width="0.6dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/iv_status"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/iv_status"
                android:background="@color/yellow_item_divider_bg" />

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignTop="@+id/iv_status"
                android:layout_toRightOf="@+id/v_divider"
                android:src="@mipmap/ic_user" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_status"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/iv_user"
                android:textColor="@color/resource_assist_text"
                android:singleLine="true"
                android:textSize="14sp"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/iv_reason"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignLeft="@+id/iv_status"
                android:layout_below="@+id/iv_status"
                android:layout_marginRight="6dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/ic_approve_reason" />

            <ImageView
                android:id="@+id/iv_detail"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignLeft="@+id/iv_status"
                android:layout_below="@+id/iv_reason"
                android:layout_marginRight="6dp"
                android:layout_marginTop="7dp"
                android:src="@mipmap/ic_approve_detail" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_reason"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/iv_reason"
                android:textColor="@color/resource_assist_text"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_detail"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/iv_detail"
                android:textColor="@color/resource_assist_text"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/deal_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_reject"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/iv_status"
                    android:layout_below="@+id/iv_status"
                    android:src="@mipmap/ic_approve_reject" />

                <ImageView
                    android:id="@+id/iv_support"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/iv_status"
                    android:layout_below="@+id/iv_status"
                    android:src="@mipmap/ic_approve_support" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_approve_stamp"
                android:layout_width="84dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_approve_pass"
                android:visibility="gone" />

        </com.svw.dealerapp.ui.widget.RoundCornerRelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_height"/>
</LinearLayout>