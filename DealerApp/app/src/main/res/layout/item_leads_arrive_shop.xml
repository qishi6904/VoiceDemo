<?xml version="1.0" encoding="utf-8"?>
<com.svw.dealerapp.ui.widget.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:triangleView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/leads_item_divider_height"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/ll_front_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_leads_recycler_view_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/leads_item_height"
                android:layout_height="@dimen/leads_item_height">

                <com.svw.dealerapp.ui.widget.TriangleView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    triangleView:triangle_view_color="#000000"
                    triangleView:triangle_view_radius="5dp" />

                <TextView
                    android:id="@+id/tv_arrive_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:text="5次"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_left_icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_customer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="顾客001"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="进店时间"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="2017.09.08, 11:08"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/v_divider_down"
            android:layout_width="match_parent"
            android:layout_height="@dimen/leads_item_divider_height"
            android:background="#FFFFFF"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_back_view"
        android:layout_width="@dimen/leads_item_back_view_layout_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/leads_item_divider_height">

        <ImageView
            android:layout_width="@dimen/leads_item_back_view_item_width"
            android:layout_height="@dimen/leads_item_height"
            android:layout_marginLeft="@dimen/leads_item_divider_height"
            android:background="@drawable/shape_leads_arrive_shop_item_back_view_bg"
            android:paddingBottom="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="35dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="@dimen/leads_item_back_view_item_width"
            android:layout_height="@dimen/leads_item_height"
            android:layout_marginLeft="@dimen/leads_item_divider_height"
            android:background="@drawable/shape_leads_arrive_shop_item_back_view_bg"
            android:paddingBottom="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="35dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="@dimen/leads_item_back_view_item_width"
            android:layout_height="@dimen/leads_item_height"
            android:layout_marginLeft="@dimen/leads_item_divider_height"
            android:background="@drawable/shape_leads_arrive_shop_item_back_view_bg"
            android:paddingBottom="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="35dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

</com.svw.dealerapp.ui.widget.DragLayout>