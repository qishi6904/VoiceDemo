<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="18dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_remark_user_header"
            android:layout_width="32dp"
            android:layout_height="32dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_remark_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/sdv_remark_user_header"
            android:textColor="@color/resource_main_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_remark_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_remark_user_name"
            android:layout_below="@+id/tv_remark_user_name"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/resource_assist_text"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp"/>

        <TextView
            android:id="@+id/tv_remark_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_remark_content"
            android:textColor="@color/resource_main_text"
            android:textSize="12sp"
            android:layout_marginRight="2dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/yellow_item_divider_bg"
        android:layout_marginLeft="18dp"/>

</LinearLayout>